{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "security": {
          "description": "security specific configuration",
          "type": "object",
          "properties": {
              "whitelist": {
                  "type": "object",
                  "description": "IP protection",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "title": "Enable IP protection",
                      "description": "Only the configured set of IPs will be able to reach the service",
                      "default": true
                    },
                    "ip": {
                      "type": "string",
                      "description": "the white list of IP is whitespace",
                      "title": "Whitelist of IP",
                      "x-form": {
                        "value": "{{user.ip}}"
                      },
                      "hidden": {
                        "value": false,
                        "path": "argo-workflows/whitelist/enabled"
                      }
                    }
                  }
              }
          }
        },
        "hostname": {
            "type": "string",
            "form": true,
            "title": "Hostname",
            "x-form": {
                "hidden": true
            },
            "x-generated": {
                "type": "externalDNS",
                "scope": "argo-workflows",
                "name": "ihm"
            }
        }
      }
    }
  }
}
