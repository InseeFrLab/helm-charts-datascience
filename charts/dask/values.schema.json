{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "dask": {
      "description": "dask specific configuration",
      "type": "object",
      "properties": {
        "scheduler": {
          "description": "scheduler specific configuration",
          "type": "object",
          "properties": {
            "image": {
              "description": "image of the dask scheduler",
              "type": "object",
              "properties": {
                "repository": {
                  "description": "image of the dask scheduler",
                  "type": "string",
                  "enum": ["inseefrlab/rapidsai","inseefrlab/blazingsql"],
                  "default": "inseefrlab/rapidsai"   
                }
              }
            }
          }
        },
        "worker": {
          "description": "worker specific configuration",
          "type": "object",
          "properties": {
            "image": {
              "description": "image of the dask scheder",
              "type": "object",
              "properties": {
                "repository": {
                  "description": "image of the dask worker",
                  "type": "string",
                  "enum": ["inseefrlab/rapidsai","inseefrlab/blazingsql"],
                  "default": "inseefrlab/rapidsai"   
                },
                "dask_worker": {
                  "description": "command of the dask worker",
                  "type": "string",
                  "enum": ["dask-worker","dask-cuda-worker"],
                  "default": "dask-worker"   
                }
              }
            },
            "replicas": {
              "description": "number of worker",
              "type": "integer",
              "default": 3   
            },
            "resources": {
              "description": "Your worker will have at least the requested resources and never more than its limits. No limit for a resource and you can consume everything left on the host machine.",
              "type": "object",
              "properties": {
                  "limits": {
                      "description": "No limit for cpu and memory",
                      "type": "object",
                      "properties": {
                        "nvidia.com/gpu": {
                          "description": "GPU to allocate to this instance. This is also requested",
                          "type": "string",
                          "default": "0",
                          "render": "slider",
                          "sliderMin": 0,
                          "sliderMax": 3,
                          "sliderStep": 1,
                          "sliderUnit": "" 
                        }
                      }
                  }
              }
          }
        }
        }
      }
    },
    "security": {
      "description": "security specific configuration",
      "type": "object",
      "properties": {
          "allowlist": {
              "type": "object",
              "description": "IP protection",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "title": "Enable IP protection",
                  "description": "Only the configured set of IPs will be able to reach the service",
                  "default": true,
                  "x-form": {
                    "value": "{{region.defaultIpProtection}}"
                  }
                },
                "ip": {
                  "type": "string",
                  "description": "the allow list of IP is whitespace",
                  "title": "Allowed IP",
                  "x-form": {
                    "value": "{{user.ip}}"
                  },
                  "hidden": {
                      "value": false,
                      "path": "security/allowlist/enabled"
                  } 
                }
              }
          }
      }
  },
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "hostname": {
            "type": "string",
            "form": true,
            "title": "Hostname",
            "x-form": {
                "hidden": true
            },
            "x-generated": {
                "type": "externalDNS",
                "scope": "dask",
                "name": "ihm"
            }
        }
      }
    },
    "tags": {
      "description": "Configuration of resource tags (labels)",
      "type": "object",
      "properties": {
        "filtertag1": {      
            "description": "resource tag number 1",
            "type": "string",
            "default": "",
            "x-form": {
                "value": "{{tags.filtertag1}}"
            }
        },
        "filtertag2": {
            "description": "resource tag number 2",
            "type": "string",
            "default": "",
            "x-form": {
                "value": "{{tags.filtertag2}}"
            }
        },
        "filtertag3": {

            "description": "resource tag number 3",
            "type": "string",
            "default": "",
            "x-form": {
                "value": "{{tags.filtertag3}}"
            }
        }
      }
    }
  }
}
